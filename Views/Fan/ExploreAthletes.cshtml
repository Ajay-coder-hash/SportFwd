@model List<SportFwd.Models.User>
@{
    ViewData["Title"] = "Explore Athletes";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Explore Athletes</h2>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th style="width: 150px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var athlete in Model)
            {
                <tr>
                    <td>@athlete.Name</td>
                    <td>@athlete.Email</td>
                    <td>
                        <form asp-action="Follow" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@athlete.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-success">Follow</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="/Home/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
